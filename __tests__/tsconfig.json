{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "esnext"
        ],
        "baseUrl": "./",
        "paths": {
            "@app-state/*": ["./src/state/*"],
            "@models/*": ["./src/models/*"],
            "@business-logic/*": ["./src/business-logic/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}