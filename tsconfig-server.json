{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "backless-development",
        "baseUrl": "./",
        "paths": {
            "@app-state/*": ["../../src/state/*"],
            "@common/*":  ["../../src/common/*"],
            "@models/*": ["../../src/models/*"],
            "@business-logic/*": ["../../src/business-logic/*"]
        },
        "jsx": "react",
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "src/server/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/server/copy-static-assets.ts"
    ]
}