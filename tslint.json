{
  "extends": "tslint:recommended",  
  "rules": {
    "max-line-length": {
      "options": [180]
    },
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "eofline": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "local-package-modules-at-the-top": true,
    "local-package-modules-sorted-alphabetically": true
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  },
  "rulesDirectory": "./ts-lint-rules",
  "defaultSeverity": "warning"
}